<% @partners.each do |partner| %>
  <div class='py-3 grid grid-cols-3 gap-x-4 gap-y-3'>
    <div class='col-span-1 pl-2 mb-2'>
      <%= partner.name %>
    </div>
    <div class='col-start-2 col-span-1'>
      <%= link_to 'Message', partners_path(partner_id: partner, user_id: current_user.id), class: primary_btn_style %>
    </div>
    <div class='col-span-1'>
      <%= link_to 'Remove', '#', class: danger_btn_style %>
    </div>
  </div>
<% end %>
