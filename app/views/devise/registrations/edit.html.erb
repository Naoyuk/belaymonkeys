<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="p-2 my-2">
      <%= f.label :name, class: form_label_style %>
      <%= f.text_field :name, required: true, autofocus: true, class: form_input_style %>
    </div>

    <div class="p-2 my-2">
      <%= f.label :email, class: form_label_style %>
      <%= f.text_field :email, required: true, autocomplete: "email", class: form_input_style %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <div class="p-2 my-2">
      <%= f.label :password, class: form_label_style %>
      <%= f.text_field :password, hint: "leave it blank if you don't want to change it", required: false, autocomplete: "new-password", class: form_input_style %>
    </div>

    <div class="p-2 my-2">
      <%= f.label :password_confirmation, class: form_label_style %>
      <%= f.text_field :password_confirmation, arequired: false, autocomplete: "new-password", class: form_input_style %>
    </div>

    <div class="p-2 my-2">
      <%= f.label :current_password, class: form_label_style %>
      <%= f.text_field :password_confirmation, hint: "we need you current password to confirm your changes", arequired: true, autocomplete: "current-password", class: form_input_style %>
    </div>

    <div class="p-2 my-2">
      <%= f.label :avatar, class: form_label_style %>
      <%= f.file_field :avatar %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update", class: submit_btn_style %>
  </div>
<% end %>

<div class="my-6">
  <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: danger_btn_style %>
</div>

<%= link_to "Back", :back, class: link_style %>
