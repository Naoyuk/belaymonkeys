<h2 class='text-xl font-bold text-green-500'>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="grid grid-cols-1 place-content-center">
    <div class="p-2 my-2">
      <%= f.label :name, class: form_label_style %>
      <%= f.text_field :name, required: true, autofocus: true, class: form_input_style %>
    </div>

    <div class="p-2 my-2">
      <%= f.label :email, class: form_label_style %>
      <%= f.text_field :email, required: true, autocomplete: "email", class: form_input_style %>
    </div>

    <div class="p-2 my-2">
      <%= f.label :password, class: form_label_style %>
      <%= f.text_field :password, required: true, autocomplete: "new-password", class: form_input_style %>
    </div>

    <div class="p-2 my-2">
      <%= f.label :password_confirmation, class: form_label_style %>
      <%= f.text_field :password_confirmation, arequired: true, utocomplete: "new-password", class: form_input_style %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign up", class: submit_btn_style %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
