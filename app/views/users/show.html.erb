<div class="grid sm:grid-cols-1 lg:grid-cols-3 gap-4">
  <div class="col-span-1">
    <%= render 'users/sidebar', user: @user %>
  </div>

  <div class="p-2 col-span-2">
    <h2 class='ml-4 mb-4 border-b-2'><%= @user.name %>'s Posts</h2>
    <% @user.posts.each do |post| %>
      <%= render partial: post, user: @user %>
    <% end %>
  </div>
</div>
