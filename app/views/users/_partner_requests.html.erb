<div class='mt-10'>
  <h2 class='mb-4 border-b-2'><%= pluralize(user.invitations.count, 'Partner Request') %></h2>
  <div class='partnership-list py-3 grid grid-cols-3 gap-x-4 gap-y-3'>
    <% user.invitations.each do |invitation| %>
      <div class='col-span-1 pl-2 mb-2'>
        <span><%= invitation.name %></span>
      </div>
      <div class='col-start-2 col-span-1'>
        <%= link_to 'Accept',
            accept_request_path(partner_id: invitation.id),
            data: { "turbo-method": :put, "turbo-frame": "_top" },
            class: primary_btn_style %>
      </div>
      <div class='col-span-1'>
        <%= link_to 'Delete',
            remove_partner_path(partner_id: invitation.id),
            data: { "turbo-method": :delete },
            class: danger_btn_style %>
      </div>
    <% end %>
  </div>
</div>
