<div class='mt-10'>
  <h2 class='mb-4 border-b-2'>Your partners</h2>
  <div class='py-3'>
    <% user.partners.each do |partner| %>
      <div class='partnership-list grid grid-cols-3 gap-x-4 gap-y-3 py-3'>
        <div class='col-span-1 pl-2 mb-2'>
          <span><%= partner.name %></span>
        </div>
        <div class='col-start-2 col-span-1'>
          <%= link_to 'Message',
              direct_messages_path(partner),
              class: primary_btn_style %>
        </div>
        <div class='col-span-1'>
          <%= link_to 'Remove',
              remove_partner_path(partner_id: partner.id),
              data: { "turbo-method": :delete },
              class: danger_btn_style %>
        </div>
      </div>
    <% end %>
  </div>
</div>
