<div class="card shadow body m-3 p-3">
  <div class="card-body">
    <div class="py-2 border-top">
      <div class="my-auto">
        <b><%= post.date.to_fs(:stamp_list_old) %></b>
        <b><%= post.user.name %></b>
      </div>

      <div class="my-auto">
        Date: <%= post.start_time.to_fs(:stamp_list_old) %> ~ <%= post.end_time.to_fs(:stamp_list_old) %>
      </div>

      <div class="my-auto">
        Area: <%= post.area %>
      </div>

      <div class="my-auto">
        <%= tag.span(climb_type(post.kind_of_climbing), class: climb_class(post.kind_of_climbing)) %>
      </div>
    </div>

    <hr>

    <div class="my-auto">
      <%= safe_join(post.description.split("\n"), tag(:br)) %>
    </div>

    <div class="row py-2 border-top">
      <div class="my-auto">
        <div class="d-flex justify-content-end">
          <%= message_link_to(post) %>
        </div>
      </div>
    </div>
  </div>
</div>
