<div class="mt-3 p-3">
  <%= form_with(url: search_path, local: true, method: :get, class: 'shadow-md rounded p-4') do |f| %>
    <%= f.label :area_id, "Area", class: form_label_style %>
    <%= f.select :area_id, 
      options_for_select(Area.all.to_a.map{|area| [area[:name], area[:id]]}),
      class: form_select_box_style
    %>
    <%= f.submit 'Search', class: primary_btn_style %>
  <% end %>
</div>
<%= turbo_frame_tag 'posts-list' do %>
  <div class="mt-3">
    <%= render @posts %>
  </div>
<% end %>
